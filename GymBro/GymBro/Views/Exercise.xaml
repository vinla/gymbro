<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:c="clr-namespace:GymBro.Controls;assembly=GymBro"
             x:Class="GymBro.Views.Exercise">
  <StackLayout Orientation="Vertical" Padding="5,0,0,0">
    <Label Text="Name of exercise" VerticalOptions="Center"/>
    <Entry VerticalOptions="Center" Margin="5" Text="{Binding Name}"/>
    <c:MvvmPicker ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"></c:MvvmPicker>
    <StackLayout Orientation="Horizontal">
      <Button Text="Cancel" Command="{Binding Cancel}" Margin="3"/>
      <Button Text="Save" Command="{Binding Save}" Margin="4"/>
    </StackLayout>
  </StackLayout>
</ContentPage>